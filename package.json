{
  "name": "gtai",
  "description": "CLI tool for Google Translate Advanced LLM",
  "version": "1.0.0",
  "main": "src/index.ts",
  "bin": {
    "gtai": "./src/index.ts"
  },
  "type": "module",
  "engines": {
    "bun": ">=1.2.15"
  },
  "files": [
    "src/index.ts",
    "src/settings.ts",
    "src/translation.ts",
    "src/glossary.ts",
    "README.md"
  ],
  "keywords": [
    "translate",
    "google-translate",
    "cli",
    "bun",
    "translation",
    "glossary",
    "i18n"
  ],
  "scripts": {
    "start": "bun run ./src/index.ts",
    "dev": "bun run start --watch",
    "typecheck": "tsc ./src/index.ts --noEmit",
    "lint": "oxlint ./src"
  },
  "devDependencies": {
    "@clack/prompts": "1.0.0-alpha.1",
    "@google-cloud/storage": "^7.16.0",
    "@google-cloud/translate": "^9.1.0",
    "@types/bun": "^1.2.17",
    "clipboardy": "^4.0.0",
    "oxlint": "^1.3.0"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  },
  "trustedDependencies": [
    "protobufjs"
  ],
  "author": "phenomen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phenomen/gtai.git"
  },
  "bugs": {
    "url": "https://github.com/phenomen/gtai/issues"
  },
  "homepage": "https://github.com/phenomen/gtai#readme"
}
