{
  "name": "gtai",
  "description": "CLI tool for Google Translate Advanced LLM",
  "version": "1.3.0",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gtai": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "translate",
    "google-translate",
    "cli",
    "nodejs",
    "translation",
    "glossary",
    "i18n"
  ],
  "scripts": {
    "build": "npx tsc",
    "dev": "node --no-deprecation ./src/index.js",
    "test": "node --no-deprecation ./dist/index.js",
    "typecheck": "npx tsc --noEmit",
    "lint": "oxlint ./src"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "oxlint": "^1.5.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@clack/prompts": "1.0.0-alpha.1",
    "@google-cloud/storage": "^7.16.0",
    "@google-cloud/translate": "^9.1.0",
    "clipboardy": "^4.0.0"
  },
  "trustedDependencies": [
    "protobufjs"
  ],
  "author": "phenomen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phenomen/gtai.git"
  },
  "bugs": {
    "url": "https://github.com/phenomen/gtai/issues"
  },
  "homepage": "https://github.com/phenomen/gtai#readme"
}
